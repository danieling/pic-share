<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>{{ img.title }}</h2>
        <button class="btn btn-danger" id="btn-delete" data-id="{{img.uniqueId}}">
            <i class="fa fa-times"></i> Delete
        </button>
    </div>
    <div class="card-body">
        <p>{{ img.description }}</p>
        <div class="text-center">
            <img class="img-fluid" src="/public/upload/{{ img.filename }}" alt="Image: img.filename">
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <button class="btn btn-success" id="btn-like" data-id="{{ img.filename }}">
            <i class="fas fa-thumbs-up"> Like</i>
        </button>
        <p>
            <span class="likes-count">{{ img.likes }}</span>
            <i class="fas fa-heart"></i>
        </p>
        <p>
            <i class="fas fa-eye"></i> {{ img.views }}
        </p>
        <p>
            <i class="far fa-clock"></i>
            {{ timeago img.timestamp }}
        </p>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Comments</h3>
        <button class="btn btn-info" id="btn-toggle-comment"> 
            <i class="fa fa-comment-o"></i> Post a Comment
        </button>
    </div>
    <div class="card-body">
        <blockquote>
            <form action="/images/{{ img.uniqueId }}/comment" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="email" placeholder="Email">
                </div>
                <div class="form-group">
                    <textarea name="comment" rows="2" class="form-control" placeholder="Enter your Comment here"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success" id="btn-comment">
                        <i class="fa fa-comment"></i> POST
                    </button>
                </div>
            </form>
        </blockquote>
        <ul class="list-group p-4">
            {{#each comments }}
            <li class="list-group-item">
                <div class="row">
                    <a href="#" class="col text-center">
                        <img src="http://gravatar.com/avatar/{{ gravatar }}?d=monsterid&s=45" alt="user avatar">
                    </a>
                    <blockquote class="col">
                        <p class="lead">{{comment}}</p>
                        <footer class="blockquote-footer">
                            {{ name }} - {{ timeago timestamp }}
                        </footer>
                    </blockquote>
                </div>
            </li>
            {{/each }}
        </ul>
    </div>
</div>