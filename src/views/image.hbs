<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>{{ img.title }}</h2>
        <button class="btn btn-danger" id="btn-delete" data-id="{{img.uniqueId}}">
            <i class="fa fa-times"></i> Delete
        </button>
    </div>
    <div class="card-body">
        <p>{{ img.description }}</p>
        <div class="text-center">
            <img class="img-fluid" src="/public/upload/{{ img.filename }}" alt="Image: img.filename">
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <button class="btn btn-success" id="btn-like" data-id="{{ img.filename }}">
            <i class="fas fa-thumbs-up"> Like</i>
        </button>
        <p>
            <span class="likes-count">{{ img.likes }}</span>
            <i class="fas fa-heart"></i>
        </p>
        <p>
            <i class="fas fa-eye"></i> {{ img.views }}
        </p>
        <p>
            <i class="far fa-clock"></i>
            {{ timeago img.timestamp }}
        </p>
    </div>
</div>